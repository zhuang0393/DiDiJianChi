<!--pages/setgoal/setgoal.wxml-->
<scroll-view scroll-y="true" >

<view class="inputView" style="margin-top: 40% ">
<input class="input" placeholder="给目标起个名字吧" placeholder-style="color: red" maxlength="50" bindinput="bindGoalInput" />
</view>
 
<view class="inputView">
<input class="input" type="number" placeholder="坚持多长时间" placeholder-style="color: red" maxlength="10" bindinput="bindTimeInput"/>
</view>
 
<view class="inputView">
<input class="input" type="number" placeholder="为坚持下注" placeholder-style="color: red" maxlength="10" bindinput="bindBetInput"/>
</view>

<button style="margin-left: 15rpx; margin-right: 15rpx; margin-top: 50rpx; border-radius: 40rpx" type="primary" bindtap="bindSubmitTap">确认设定</button>

</scroll-view>